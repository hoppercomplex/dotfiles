  "defaultProfile": "{2c4de342-38b7-51cf-b940-2309a097f518}",

  // Launch Settings
  "initialCols": 120,
  "initialRows": 30,
  "launchMode": "default",

  // Selection
  "copyOnSelect": false,
  "copyFormatting": true,
  "wordDelimiters": " /\\()\"'-.,:;<>~!@#$%^&*|+=[]{}~?\u2502",

  // Tab UI
  "alwaysShowTabs": true,
  "showTabsInTitlebar": true,
  "showTerminalTitleInTitlebar": true,
  "tabWidthMode": "equal",

  // Miscellaneous
  "confirmCloseAllTabs": true,
  "theme": "system",
  "rowsToScroll": "system",
  "snapToGridOnResize": true,

