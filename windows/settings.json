      "brightBlue": "#82AAFF",
      "brightCyan": "#7FDBCA",
      "brightGreen": "#22DA6E",
      "brightPurple": "#C792EA",
      "brightRed": "#EF5350",
      "brightWhite": "#FFFFFF",
      "brightYellow": "#FFEB95",
